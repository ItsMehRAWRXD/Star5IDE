{
  "name": "hello-world-ext",
  "displayName": "Hello World Ext",
  "version": "0.0.1",
  "publisher": "you",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onCommand:hello.sayHello"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hello.sayHello",
        "title": "LLM: Send Prompt"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "test": "echo \"(optional)\""
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.103.0",
    "typescript": "^5.9.2"
  }
}
