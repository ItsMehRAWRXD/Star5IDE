{
  "name": "hello-world-ext",
  "displayName": "Hello World Ext",
  "version": "0.0.1",
  "publisher": "you",
  "engines": { "vscode": "^1.85.0" },
  "activationEvents": [ "onCommand:hello.sayHello" ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hello.sayHello",
        "title": "Hello: Say Hello"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "test": "echo \"(optional)\""
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0"
  }
}
