ID_MAINMENU MENU
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "E&xit", ID_FILE_EXIT
    END
    POPUP "&View"
    BEGIN
        MENUITEM "Layout Manager...", ID_VIEW_LAYOUTMGR
    END
    POPUP "&Solution"
    BEGIN
        MENUITEM "Solution Settings...", ID_SOLUTION_SETTINGS
    END
    POPUP "&Tools"
    BEGIN
        MENUITEM "Settings...", ID_TOOLS_SETTINGS
        MENUITEM "Reports Viewer...", ID_TOOLS_REPORTS
    END
END

// ============================
// Layout Manager
// ============================
201 DIALOGEX 0,0,500,400
STYLE DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Layout Manager"
FONT 9, "Segoe UI"
BEGIN
    LTEXT "Layouts:",-1,10,10,100,12
    LISTBOX 1010,10,25,200,150,LBS_NOTIFY | WS_VSCROLL | WS_TABSTOP
    PUSHBUTTON "Delete",1001,220,25,60,14

    LTEXT "Trash Bin:",-1,10,190,100,12
    LISTBOX 1020,10,205,300,120,LBS_NOTIFY | WS_VSCROLL | WS_TABSTOP
    PUSHBUTTON "Restore",1002,320,205,60,14
    PUSHBUTTON "Clear Trash",1003,320,225,60,14
    DEFPUSHBUTTON "Close",IDCANCEL,320,300,60,14
END

